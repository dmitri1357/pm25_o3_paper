var = np.reshape(oz_trends2[:,0], (19,24))
var = (var * 20) * 100
lat = np.arange(31,50,1)
lon = np.arange(-126,-102,1)
lon, lat = np.meshgrid(lon, lat)

plt.figure(figsize=(10, 8))
